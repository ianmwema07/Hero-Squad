{{#partial "content"}}
    {{#if editHero}}
        <h1>Edit this hero!</h1>
        <form class="d-flex" action="/heroes/{{hero.id}}" method="post">
            <br>
            <label for="description">Edit this hero's name</label>
            <input id="name" name="name" type="text" value="{{hero.name}}">
            <br>
            <label for="squadId">Update this hero's squad:</label>
            <select id="squadId" name="squadId">
                {{#each squads}}
                    <option value="{{id}}">{{name}}</option>
                {{/each}}
            </select>
            <p>Don't see the right squad?<a href="/squads/new" >Add a new one first.</a></p>
            <button type="submit" class="btn btn-default btn-primary">Add Hero</button>
        </form>
    {{else}}
        <h3 class="alternate-result" >Add a new hero!</h3>
        <form action="/heroes" method="post">
            {{#if squads}}
                <label for="description">hero Description</label>
                <input id="description" name="description" type="text">
                <label for="squadId">Categorize this hero as:</label>
                <select id="squadId" name="squadId">
                    {{#each squads}}
                        <option value="{{id}}">{{name}}</option>
                    {{/each}}
                </select>
                <p>Don't see the right squad?<a href="/squads/new">Add a new one first.</a></p>
            {{else}}
                <small class="alternate-result"> You'll need to add a squad before you add a hero. </small>
            {{/if}}
            <a class="btn btn-outline-light" href="/squads/new">Go! &nbsp; <span class="mdi mdi-arrow-right-circle"></span></a>
        </form>
    {{/if}}
{{/partial}}

{{> layout.hbs}}